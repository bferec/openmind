x = 8;
echo "x = 8 => ",x,"\n";


echo "test while >= 0 x -- sans accolade\n";
 while( x > 0 ) x --;

echo "x =  => ", x , "\n";

x = 8;
echo "x = 8 => ",x,"\n";

echo "test while >= 0 -- x  sans accolade\n";
 while( x > 0 ) --x ;

echo "x =  => ", x , "\n";


echo "test while < 7 avec accolade\n";

while( x < 7 )
{
	x ++;
	echo "x =  => ", x , "\n";
}


echo "test do ... while < 5 \n";
x = 0;
echo "x = 0 => ",x,"\n";
do
{
	echo "x = ", x , "\n";
	x ++;
}while( x < 5 );

echo "test do ... while < 5  concatenation\n";
x = 0;
msg = " * ";
echo "x = 0 => ",x,"\n";
do
{
	msg += " * ";
	echo msg;
	echo "x = ", x , "\n";
	x ++;
}while( x < 5 );
